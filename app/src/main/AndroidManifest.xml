<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nemnem.travelapp"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- 갤러리 등 외부 저장소의 파일을 읽기 위한 권한 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32" />
    <!-- Android 13 (API 33) 이상에서 사용하는 미디어 파일 읽기 권한 -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.ACCESS_MEDIA_LOCATION" />

<!--    네이버 맵 SDK는 지도를 표시하기 위해 위치 권한이 필수-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- 갤러리 등 외부 저장소의 파일을 읽기 위한 권한 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32" />

    <application
        android:name="com.nemnem.travelapp.GlobalApplication"
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/modutrip_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/modutrip_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TravelApp">
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
        <activity
            android:name="com.nemnem.travelapp.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.TravelApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter android:label="filter_view_post">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="kakao${KAKAO_NATIVE_APP_KEY}" android:host="kakaolink" />
            </intent-filter>
        </activity>
        <!--    리다이렉트 URI 설정   -->
        <activity
            android:name="com.kakao.sdk.auth.AuthCodeHandlerActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:host="oauth" android:scheme="${KAKAO_NATIVE_APP_KEY}" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="com.naver.maps.map.NCP_KEY_ID"
            android:value="${NAVER_MAP_CLIENT_ID}" />
        
        <!-- 네이버 로그인 (최신 SDK에서는 자동으로 처리됨) -->
    </application>

    <queries>
        <intent>
            <action android:name="android.intent.action.SEND" />
            <data android:mimeType="*/*" />
        </intent>
        <!-- 카카오톡 앱으로 로그인하기 위한 설정 -->
        <package android:name="com.kakao.talk" />
        <!-- 인스타 -->
        <package android:name="com.instagram.android" />

        <!-- 네이버 앱으로 로그인하기 위한 설정 -->
        <package android:name="com.nhn.android.nid" />
        <package android:name="com.nhn.android.search" />
    </queries>

</manifest>